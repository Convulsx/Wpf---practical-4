<Page x:Class="WpfApp4.View.Pages.Page13"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page13">

    <Grid>
        <Image Source="/Images/Screenshot_3.png" Height="600" Width="800" />
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 15 0 0">
            <TextBlock Text="Задание 13"
                       FontSize="20"
                       FontWeight="Bold"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 250">
            <TextBlock Text="Функция y = F(x)"
                       FontSize="20"
                       FontWeight="Bold"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 150">
            <TextBlock Text="x = 1.9
                       a = -0.9 "
                       FontSize="25"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 50">
            <Button Content="Результат"
                    FontSize="20"
                    FontWeight="Bold"
                    Padding="3"
                    Width="105"
                    Cursor="Hand"
                    x:Name="BtnClickAns"
                    Click="BtnClickAns_Click"
                    Background="Transparent"
                    BorderBrush="Blue"
                    Foreground="Blue"
                    BorderThickness="2"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="10 0 20 20">
            <Button Content="На главную"
                    FontSize="20"
                    Width="125"
                    Padding="2"
                    Cursor="Hand"
                    x:Name="BtnClickMenu"
                    Click="BtnClickMenu_Click"
                    FontWeight="Bold"
                    Background="Transparent"
                    BorderBrush="Red"
                    Foreground="Red"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0 100 0 0">
            <TextBlock Text="Ответ"
               FontSize="20"
               FontWeight="Bold"
               x:Name="Tb13"/>
        </StackPanel>
    </Grid>
</Page>
